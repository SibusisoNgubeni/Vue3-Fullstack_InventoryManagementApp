{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["node_modules"]
}
